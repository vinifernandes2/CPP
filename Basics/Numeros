#include <iostream>
#include <cmath>

using namespace std;

int main(){
    int inteiro = 5;
    double decimal = 5.5;

    inteiro++;
    cout << inteiro << endl;

    inteiro  += 80;
    cout << inteiro << endl;

    cout << 10/3 << endl;
    cout << 10.0/3.0 << endl;

//funcoes da cmath
    cout << pow(2, 5) << endl; //portenciacao
    cout << sqrt(9) << endl; //raiz quadrada
    cout << round(4.3) << endl; //arredonda o numero
    cout << ceil(4.1) << endl; //arredonda para cima o numero
    cout << floor(4.9) << endl; //arredodan para baixo o numero
    cout << fmax(3, 10) << endl; //diz qual numero eh maior numero
    cout << fmin(2, 9) << endl; //diz qual eh o menor numero

    return 0;
}
